{
    "$schema": "node_modules/eslint-plugin-project-structure/projectStructure.schema.json",
    "structure": {
        "children": [
            {
                "name": "src",
                "children": [
                    {
                        "name": "app",
                        "children": [
                            {
                                "name": "/^${{parentName}}(-routing)?\\.module$/",
                                "extension": "ts"
                            },
                            {
                                "name": "/^${{parentName}}\\.component$/",
                                "extension": ["html", "sass", "ts"]
                            },
                            {
                                "name": "/^${{parentName}}\\.component\\.spec$/",
                                "extension": "ts"
                            }
                        ]
                    },
                    {
                        "name": "assets",
                        "children": []
                    },
                    {
                        "name": "favicon",
                        "extension": "ico"
                    },
                    {
                        "name": "index",
                        "extension": "html"
                    },
                    {
                        "name": "main",
                        "extension": "ts"
                    },
                    {
                        "name": "styles",
                        "extension": "sass"
                    }
                ]
            },
            {
                "extension": "*"
            }
        ]
    }
}
