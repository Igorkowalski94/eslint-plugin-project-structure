{
  "author": "Igor Kowalski (Igorkowalski94)",
  "name": "eslint-plugin-project-structure",
  "version": "2.1.17",
  "license": "MIT",
  "description": "Eslint plugin with rules that will help you achieve a project structure that is scalable, consistent, and well thought out. Whether you're working alone or with a small or large team, save time by automating the reviews of key principles for a healthy project!",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "project structure",
    "folder structure",
    "filename validation",
    "folder name validation",
    "naming rules",
    "independent modules",
    "import validation"
  ],
  "homepage": "https://github.com/Igorkowalski94/eslint-plugin-project-structure#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Igorkowalski94/eslint-plugin-project-structure"
  },
  "bugs": {
    "email": "jamnik999@gmail.com",
    "url": "https://github.com/Igorkowalski94/eslint-plugin-project-structure/issues"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
  },
  "scripts": {
    "clean": "del /f ./parser.js ./parser.d.ts",
    "build": "tsup",
    "format": "prettier --write --config .prettierrc.json .",
    "format:check": "prettier --check --config .prettierrc.json .",
    "deadCode:check": "ts-prune --error",
    "types:check": "tsc",
    "lint:check": "eslint . --max-warnings 0",
    "test:check": "jest --coverage --watchAll=false --bail",
    "test": "jest --coverage --watch",
    "checkAll": "yarn deadCode:check && yarn format:check && yarn lint:check && yarn test:check",
    "husky:prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.1.0",
    "comment-json": "^4.2.5",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.4.1",
    "micromatch": "^4.0.7"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.3.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-project-structure": "2.1.16",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0"
  }
}
