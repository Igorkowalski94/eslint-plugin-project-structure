{
    "$schema": "node_modules/eslint-plugin-project-structure/folderStructure.schema.json",
    "structure": {
        "children": [
            {
                "name": "src",
                "children": [
                    {
                        "ruleId": "rules_folder"
                    },
                    {
                        "ruleId": "helpers_folder"
                    },
                    {
                        "ruleId": "errors_folder"
                    },
                    {
                        "name": "consts",
                        "extension": ".ts"
                    },
                    {
                        "name": "index",
                        "extension": ".ts"
                    }
                ]
            },
            {
                "extension": "*"
            }
        ]
    },
    "rules": {
        "additional_files": {
            "name": "/^${{parentName}}(\\.(types|consts|test))$/",
            "extension": ".ts"
        },

        "test_file": {
            "name": "/^${{camelCase}}\\.test$/",
            "extension": ".ts"
        },

        "helper_folder": {
            "name": "/^${{camelCase}}$/",
            "children": [
                {
                    "ruleId": "helpers_folder"
                },
                {
                    "ruleId": "additional_files"
                },
                {
                    "name": "/^${{parentName}}$/",
                    "extension": ".ts"
                }
            ]
        },
        "helpers_folder": {
            "name": "helpers",
            "children": [
                {
                    "ruleId": "helper_folder"
                },
                {
                    "ruleId": "test_file"
                },
                {
                    "name": "/^${{camelCase}}$/",
                    "extension": ".ts"
                }
            ]
        },
        "rule_folder": {
            "name": "/^${{camelCase}}$/",
            "children": [
                {
                    "ruleId": "helpers_folder"
                },
                {
                    "ruleId": "errors_folder"
                },
                {
                    "ruleId": "additional_files"
                },
                {
                    "name": "/^${{parentName}}$/",
                    "extension": ".ts"
                }
            ]
        },
        "rules_folder": {
            "name": "rules",
            "children": [
                {
                    "ruleId": "rule_folder"
                }
            ]
        },
        "errors_folder": {
            "name": "errors",
            "children": [
                {
                    "name": "/^${{camelCase}}(\\.test)?$/",
                    "extension": ".ts"
                },
                {
                    "name": "/^${{PascalCase}}(\\.test)?$/",
                    "extension": ".ts"
                }
            ]
        }
    }
}
