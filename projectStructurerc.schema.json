{
    "$ref": "#/definitions/ProjectStructureConfig",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Case": {
            "enum": [
                "PascalCase",
                "camelCase",
                "snake_case",
                "kebab-case",
                "dash-case"
            ],
            "type": "string"
        },
        "Extension": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            ]
        },
        "FileRule": {
            "additionalProperties": false,
            "properties": {
                "ruleId": {
                    "default": "Remember, you can only use 'ruleId' when the rule object has no other keys",
                    "type": "null"
                },
                "children": {
                    "default": "Remember, you can only use 'children' when 'type' is a folder/not set",
                    "type": "null"
                },
                "extension": {
                    "default": "",
                    "$ref": "#/definitions/Extension"
                },
                "name": {
                    "default": "",
                    "$ref": "#/definitions/Name"
                },
                "type": {
                    "enum": ["file", "folder"],
                    "const": "file",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "FolderRule": {
            "additionalProperties": false,
            "properties": {
                "ruleId": {
                    "default": "ðŸ”¥ You can only use 'ruleId' when the rule object has no other keys ðŸ”¥",
                    "type": "null"
                },
                "extension": {
                    "default": "ðŸ”¥ You can only use 'extension' when 'type' is a file ðŸ”¥",
                    "type": "null"
                },
                "children": {
                    "default": [
                        {
                            "type": "folder"
                        }
                    ],
                    "items": {
                        "$ref": "#/definitions/Rule"
                    },
                    "type": "array"
                },
                "name": {
                    "default": "",
                    "$ref": "#/definitions/Name"
                },
                "type": {
                    "enum": ["file", "folder"],
                    "const": "folder",
                    "type": "string"
                }
            },
            "required": ["children"],
            "type": "object"
        },
        "RuleId": {
            "additionalProperties": false,
            "properties": {
                "ruleId": {
                    "default": "",
                    "type": "string"
                },
                "children": {
                    "default": "ðŸ”¥ Cannot use 'children' together with 'ruleId' ðŸ”¥",
                    "type": "null"
                },
                "extension": {
                    "default": "ðŸ”¥ Cannot use 'type' together with 'ruleId' ðŸ”¥",
                    "type": "null"
                },
                "name": {
                    "default": "ðŸ”¥ Cannot use 'name' together with 'ruleId' ðŸ”¥",
                    "type": "null"
                },
                "type": {
                    "default": "ðŸ”¥ Cannot use 'type' together with 'ruleId' ðŸ”¥",
                    "type": "null"
                }
            },
            "required": ["ruleId"],
            "type": "object"
        },
        "InheritParentName": {
            "enum": ["firstLetterUppercase", "firstLetterLowercase"],
            "type": "string"
        },
        "Name": {
            "anyOf": [
                {
                    "$ref": "#/definitions/NameType"
                },
                {
                    "type": "string"
                }
            ]
        },
        "NameType": {
            "additionalProperties": false,
            "properties": {
                "inheritParentName": {
                    "$ref": "#/definitions/InheritParentName"
                },
                "regex": {
                    "default": "/^ $/",
                    "type": "string"
                },
                "case": {
                    "$ref": "#/definitions/Case"
                }
            },
            "type": "object"
        },
        "ProjectStructureConfig": {
            "additionalProperties": false,
            "properties": {
                "ignorePatterns": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "rules": {
                    "additionalProperties": {
                        "$ref": "#/definitions/Rule"
                    },
                    "type": "object"
                },
                "structure": {
                    "$ref": "#/definitions/Rule"
                }
            },
            "required": ["structure"],
            "type": "object"
        },
        "Rule": {
            "anyOf": [
                {
                    "$ref": "#/definitions/FolderRule"
                },
                {
                    "$ref": "#/definitions/FileRule"
                },
                {
                    "$ref": "#/definitions/RuleId"
                }
            ]
        }
    }
}
